from pydantic import BaseModel, Field, EmailStr
from typing import List, Optional, Literal
from datetime import datetime
from bson import ObjectId

# Helper for MongoDB ObjectId
class PyObjectId(ObjectId):
    @classmethod
    def __get_validators__(cls):
        yield cls.validate

    @classmethod
    def validate(cls, v):
        if not ObjectId.is_valid(v):
            raise ValueError("Invalid objectid")
        return ObjectId(v)

    @classmethod
    def __modify_schema__(cls, field_schema):
        field_schema.update(type="string")

# --- Enums ---
Role = Literal["admin", "lawyer", "client"]
CaseStatus = Literal["Filed", "Under Process", "Hearing Scheduled", "Pending", "Closed"]

# --- Timeline ---
class CaseTimelineEntry(BaseModel):
    status: CaseStatus
    date: datetime = Field(default_factory=datetime.now)
    notes: Optional[str] = None

# --- User Models ---
class UserBase(BaseModel):
    email: EmailStr
    full_name: str
    role: Role

class UserCreate(UserBase):
    password: str

class UserInDB(UserBase):
    id: PyObjectId = Field(default_factory=PyObjectId, alias="_id")
    hashed_password: str
    
    class Config:
        json_encoders = {ObjectId: str}
        allow_population_by_field_name = True

class Token(BaseModel):
    access_token: str
    token_type: str

class TokenData(BaseModel):
    email: Optional[str] = None

# --- Case Models ---
class CaseFile(BaseModel):
    filename: str
    url: str
    upload_date: datetime = Field(default_factory=datetime.now)

class CaseBase(BaseModel):
    client_name: str
    filing_date: datetime = Field(default_factory=datetime.now)
    case_type: str
    jurisdiction: str
    assigned_lawyer_email: EmailStr
    status: CaseStatus = "Filed"

class CaseCreate(CaseBase):
    pass

class CaseUpdate(BaseModel):
    client_name: Optional[str] = None
    case_type: Optional[str] = None
    jurisdiction: Optional[str] = None
    assigned_lawyer_email: Optional[EmailStr] = None
    status: Optional[CaseStatus] = None

class CaseInDB(CaseBase):
    id: PyObjectId = Field(default_factory=PyObjectId, alias="_id")
    case_id: str  # Human-readable ID
    timeline: List[CaseTimelineEntry] = []
    files: List[CaseFile] = []
    created_by_email: EmailStr

    class Config:
        json_encoders = {ObjectId: str}
        allow_population_by_field_name = True
